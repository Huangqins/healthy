
.card {
  display: flex;
  align-items: center;
  background-color: #fff;
  border: 2rpx solid #ccc;
  padding: 10rpx 20rpx;
  margin: 20rpx;
  box-shadow: 0 -2rpx 4rpx 0 #ccc;
}
.card .card-detail {
  margin-right: 20rpx;
  flex: 1;
}
.card .card-detail ._div {
  width: 100%;
}
.card .card-detail .card-detail-title ._h5 {
  display: inline-block;
  font-size: 32rpx;
  font-weight: 600;
  overflow: hidden;
}
.card .card-detail .card-detail-title ._span {
  float: right;
  color: #b4b4b4;
  font-size: 24rpx;
}
.card .card-detail .card-detail-des {
  color: #b4b4b4;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.card .card-detail .card-detail-status ._span {
  display: inline-block;
  font-size: 24rpx;
  padding-left: 36rpx;
}
.card .card-detail .card-detail-status ._span:not(:first-of-type) {
  margin-left: 40rpx;
  background-position: left center;
  background-repeat: no-repeat;
  background-size: 30rpx 30rpx;
}
.card .card-detail .card-detail-status .authorName {
  font-size: 28rpx;
  color: #b4b4b4;
}
.card .card-detail .card-detail-status .sikm-num {
  background-image: url(data:image/png;base64,);
}
.card .card-detail .card-detail-status .comment-num {
  background-image: url(data:image/png;base64,);
}
.card .card-detail .card-detail-status .praise-num {
  background-image: url(data:image/png;base64,);
}
.card .card-img {
  width: 180rpx;
  height: 122rpx;
  background-color: #b4b4b4;
}
.card .card-img ._img {
  width: 100%;
  height: 100%;
}